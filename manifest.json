{
  "manifest_version": 2,
  "name": "Selective CSS Replacer",
  "version": "1.0",
  "description": "Replaces specific CSS styles on the current webpage",
  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon_16.png",
      "48": "icon_48.png",
      "128": "icon_128.png"
    },
    "default_popup": "popup.html"
  }
}